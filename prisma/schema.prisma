generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id                  BigInt               @id @default(autoincrement())
  number              String               @db.VarChar(255)
  subscription_mangas subscription_manga[]
}

model subscription_manga {
  id         BigInt @id @default(autoincrement())
  manga_name String @db.VarChar(255)
  user       user   @relation(fields: [user_id], references: [id])
  user_id    BigInt
}
